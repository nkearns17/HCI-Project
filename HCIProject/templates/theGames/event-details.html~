<script>

$(".map2").hide();
$(".directions").hide();
$(".Showbutton").hide();

$(".button").click(function(){
	$(".maps1").hide();
	$(".map2").show();
	$(".directions").show();
	$(".button").hide();
	$(".Showbutton").show();
});
$(".Showbutton").click(function(){
	$(".directions").hide();
	$(".Showbutton").hide();
	$(".button").show();
});

</script>

