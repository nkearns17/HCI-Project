<script>

$(".maps1").hide();
$(".map2").hide();
$(".directions").hide();
$(".Showbutton").hide();

$(".button").click(function(){
	$(".maps1").hide();
	$(".map2").show();
	$(".directions").show();
	$(".button").hide();
	$(".Showbutton").show();
});
$(".Showbutton").click(function(){
	$(".directions").hide();
	$(".Showbutton").hide();
	$(".maps1").hide();
	$(".map2").hide();
	$(".button").show();
});

</script>

<script>

$(".vote").click(function(){
	//$(this).style.width = $(this).style.width+(10+'%');
	$(this).css("width", '+=' + (0.1 * $('.progress').width()));
});

</script>

