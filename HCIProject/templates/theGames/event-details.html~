<script>
var progressBar1 = $('#progress-bar1'),
    width1 = progressBar1.width();

//progressBar1.width(width1);

function increment1() {
    width1 += 10;
    progressBar1.css('width', width1 + '%');
    progressBar1.css('height', '20px');
}
</script>

